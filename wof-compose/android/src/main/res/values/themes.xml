<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.WofCompose" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:statusBarColor">@color/brand_background</item>
    </style>

    <style name="Theme.WofSplashTheme" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/brand_background</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="windowSplashScreenAnimationDuration">300</item>
        <item name="postSplashScreenTheme">@style/Theme.WofCompose</item>
    </style>
</resources>
